{
  "controls": [
    {
      "type": "toggle",
      "label": "Enable Caddy Rate Limiting",
      "key": "UI-RISK-012-001",
      "default": true
    },
    {
      "type": "test_action",
      "label": "Verify Rate Limit",
      "key": "verify_caddy_limit",
